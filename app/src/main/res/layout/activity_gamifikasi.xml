<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medi_purple_primary"
    android:paddingTop="32dp"
    tools:context=".uii.GamifikasiActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logoputih" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <View
                        android:id="@+id/ivProfile"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_profile_circle" />

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/ivProfile"
                        android:text="Loading..."
                        android:textColor="@color/medi_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivBadgeMain"
                        android:layout_width="115dp"
                        android:layout_height="68dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="106dp"
                        android:src="@drawable/badge_abu" />

                    <RelativeLayout
                        android:id="@+id/rlBadgeProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivProfile"
                        android:layout_marginTop="16dp">

                        <ProgressBar
                            android:id="@+id/pbBadge"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_centerVertical="true"
                            android:progress="0"
                            android:max="20"
                            android:progressDrawable="@drawable/progress_bar_custom" />

                        <ImageView
                            android:id="@+id/ivBadgeBronze"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/badge_bronze" />

                        <ImageView
                            android:id="@+id/ivBadgeSilver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/badge_silver" />

                        <ImageView
                            android:id="@+id/ivBadgeGold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/badge_gold" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvProgressBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlBadgeProgress"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="4dp"
                        android:text="0/20" />

                    <TextView
                        android:id="@+id/tvFinishTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvProgressBadge"
                        android:layout_marginTop="16dp"
                        android:text="Finish the task\nTo upgrade your\nBadge"
                        android:textColor="@color/medi_purple_primary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivDoctor"
                        android:layout_width="165dp"
                        android:layout_height="244dp"
                        android:layout_alignBottom="@+id/tvFinishTask"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="27dp"
                        android:layout_marginBottom="-80dp"
                        android:src="@drawable/dokterbesar" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/dokterkecil" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="On Time Hero"
                        android:textColor="@color/medi_text_primary"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/pbQuestOnTime"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="8dp"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_bar_custom" />

                    <TextView
                        android:id="@+id/tvQuestOnTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/5"
                        android:textColor="@color/medi_text_secondary"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/dokterkecil" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Routine Chek-up"
                        android:textColor="@color/medi_text_primary"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/pbQuestRoutine"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="8dp"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_bar_custom" />

                    <TextView
                        android:id="@+id/tvQuestRoutine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/5"
                        android:textColor="@color/medi_text_secondary"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/dokterkecil" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Healty Reader"
                        android:textColor="@color/medi_text_primary"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/pbQuestReading"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="8dp"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_bar_custom" />

                    <TextView
                        android:id="@+id/tvQuestReading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/5"
                        android:textColor="@color/medi_text_secondary"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/dokterkecil" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Feedback Appointment"
                        android:textColor="@color/medi_text_primary"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/pbQuestFeedback"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="8dp"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_bar_custom" />

                    <TextView
                        android:id="@+id/tvQuestFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/5"
                        android:textColor="@color/medi_text_secondary"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnHome"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Home"
                android:textColor="@color/white"
                app:strokeColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>